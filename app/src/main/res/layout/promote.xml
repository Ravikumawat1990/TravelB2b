<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">


    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:orientation="vertical">


        <com.app.elixir.TravelB2B.mtplview.MtplTextView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.app.elixir.TravelB2B.mtplview.MtplTextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:background="@color/appTextColor" />


        <com.app.elixir.TravelB2B.mtplview.MtplTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center"
            android:text="FORM"
            android:textColor="@color/appTextColor"
            android:textSize="20sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/appTextColor" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp">

            <com.app.elixir.TravelB2B.mtplview.MtplEditText
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Name"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/font_12sp"
                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp">

            <com.app.elixir.TravelB2B.mtplview.MtplEditText
                android:id="@+id/edtHotelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hotel Name"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/font_12sp"
                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"

            android:orientation="vertical">

            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Hotel Type"
                android:textSize="@dimen/font_12sp"
                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@drawable/spinner_border"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerHotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />

            </RelativeLayout>


        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp">

            <com.app.elixir.TravelB2B.mtplview.MtplEditText
                android:id="@+id/edtCheapRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tariff of Cheapest Room"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/font_12sp"
                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp">

            <com.app.elixir.TravelB2B.mtplview.MtplEditText
                android:id="@+id/edtExpenciveRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tariff of Most Expensive Room"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/font_12sp"
                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp">

            <com.app.elixir.TravelB2B.mtplview.MtplEditText
                android:id="@+id/edtHoelWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hotel Website"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/font_12sp"
                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp">

            <com.app.elixir.TravelB2B.mtplview.MtplEditText
                android:id="@+id/autotextState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hotel location(city,state)"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/font_12sp"
                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

        </android.support.design.widget.TextInputLayout>

        <com.app.elixir.TravelB2B.mtplview.MtplTextView
            android:id="@+id/txtTotal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:gravity="right"
            android:text="Total 0"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="15sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.app.elixir.TravelB2B.adapter.AutoCompletionView
                android:id="@+id/citypromote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:paddingLeft="@dimen/margin_5dp"
                android:textSize="12sp"
                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp">

            <com.app.elixir.TravelB2B.mtplview.MtplEditText
                android:id="@+id/edtDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Duration(in Month)"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/font_12sp"
                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp">

            <com.app.elixir.TravelB2B.mtplview.MtplEditText
                android:id="@+id/edtCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Charges"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/font_12sp"
                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

        </android.support.design.widget.TextInputLayout>

        <!--<com.app.elixir.TravelB2B.mtplview.MtplEditText-->
        <com.app.elixir.TravelB2B.mtplview.MtplTextView
            android:id="@+id/edtPromoPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/gray_rect"
            android:drawableRight="@drawable/uploadimage"
            android:hint="Upload Photograph of the Hotel"
            android:paddingLeft="@dimen/margin_5dp"
            android:textSize="8sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

        <com.app.elixir.TravelB2B.mtplview.MtplTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Type: jpeg/jpg/png   Max Size: 2 MB "
            android:textColor="@color/color_lightred"
            android:textSize="8sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.app.elixir.TravelB2B.mtplview.MtplButton
                android:id="@+id/btnCart"
                android:layout_width="@dimen/margin_120dp"
                android:layout_height="@dimen/margin_40dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:background="@drawable/blue_rect"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"
                android:text="CART"
                android:textColor="@android:color/white"
                android:visibility="gone"
                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

            <com.app.elixir.TravelB2B.mtplview.MtplButton
                android:id="@+id/btnPriview"
                android:layout_width="@dimen/margin_120dp"
                android:layout_height="@dimen/margin_40dp"
                android:background="@drawable/blue_rect"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"
                android:text="Submit"
                android:textColor="@android:color/white"
                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />


        </LinearLayout>

        <com.app.elixir.TravelB2B.mtplview.MtplEditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="@dimen/font_12sp"
            android:visibility="gone"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />


    </LinearLayout>


</ScrollView>