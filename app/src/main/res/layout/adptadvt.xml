<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_2dp"
    android:layout_marginRight="@dimen/margin_2dp"
    android:orientation="vertical"
    android:padding="4dip">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_2dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_120dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imghotel_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#1295a2">

                    <com.app.elixir.TravelB2B.mtplview.MtplTextView
                        android:id="@+id/txtCharges"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/font_5dp"
                        android:text="Rs. 200-500"

                        android:textColor="@color/appBackColor"
                        mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                </LinearLayout>
            </RelativeLayout>

            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                android:id="@+id/txthotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5dp"
                android:text="Test Hotel"
                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                android:id="@+id/txthotel_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5dp"
                android:text="Boutique Hotel"
                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                android:id="@+id/txtWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_5dp"
                android:text=">> View More"
                android:textColor="@color/appTextColor"
                android:textStyle="bold"
                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>