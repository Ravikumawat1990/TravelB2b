<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_160dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/logo1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_alignParentBottom="true"
                    android:background="#B3000000">

                    <com.app.elixir.TravelB2B.mtplview.MtplTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:gravity="center|left"
                        android:text="Rs. 200-500"
                        android:textColor="@color/appBackColor"
                        mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                </LinearLayout>
            </RelativeLayout>

            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5dp"
                android:paddingLeft="@dimen/margin_20dp"
                android:text="Test Hotel"
                android:textColor="@color/appTextColor"
                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingLeft="@dimen/margin_20dp"
                android:text="Boutique Hotel"
                android:textColor="@color/colorPrimary"
                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="View More"
                android:textColor="@color/colorPrimary"
                android:textSize="8sp"
                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>