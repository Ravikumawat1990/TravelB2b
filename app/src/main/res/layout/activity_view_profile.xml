<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.elixir.TravelB2B.view.ViewAgentProfile">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/font_10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageView"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            app:civ_border_color="#FF000000" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/userName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/margin_5dp"
                                android:textColor="@color/colorPrimary"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/phoneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoLink="phone"
                                android:padding="@dimen/margin_5dp"
                                android:textColor="@android:color/darker_gray"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoLink="email"
                                android:ellipsize="marquee"
                                android:fadingEdge="horizontal"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textColor="@android:color/darker_gray"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                card_view:cardCornerRadius="4dp"
                                card_view:cardElevation="4dp"
                                card_view:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                        android:id="@+id/mtplTextView14"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="left"
                                        android:maxLines="1"
                                        android:padding="@dimen/margin_5dp"
                                        android:text="Certificates"
                                        android:textColor="@android:color/darker_gray"
                                        android:textStyle="bold"
                                        mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/margin_5dp">

                                        <ImageView
                                            android:id="@+id/icon1"
                                            android:layout_width="@dimen/margin_24dp"
                                            android:layout_height="@dimen/margin_24dp"
                                            android:layout_margin="1dp"
                                            android:tint="@color/appTextColor" />

                                        <ImageView
                                            android:id="@+id/icon2"
                                            android:layout_width="@dimen/margin_24dp"
                                            android:layout_height="@dimen/margin_24dp"
                                            android:layout_margin="1dp"
                                            android:tint="@color/appTextColor" />

                                        <ImageView
                                            android:id="@+id/icon3"
                                            android:layout_width="@dimen/margin_24dp"
                                            android:layout_height="@dimen/margin_24dp"
                                            android:layout_margin="1dp"
                                            android:tint="@color/appTextColor" />

                                        <ImageView
                                            android:id="@+id/icon4"
                                            android:layout_width="@dimen/margin_24dp"
                                            android:layout_height="@dimen/margin_24dp"
                                            android:layout_margin="1dp"
                                            android:tint="@color/appTextColor" />


                                    </LinearLayout>
                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                card_view:cardCornerRadius="4dp"
                                card_view:cardElevation="4dp"
                                card_view:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="left"
                                        android:maxLines="1"
                                        android:padding="@dimen/margin_5dp"
                                        android:text="Profile Completeness"
                                        android:textColor="@android:color/darker_gray"
                                        android:textStyle="bold"
                                        mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                                    <TextView
                                        android:id="@+id/totRating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:padding="@dimen/margin_2dp" />


                                    <ProgressBar
                                        android:id="@+id/ProgressBar"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:indeterminate="false"
                                        android:padding="@dimen/margin_5dp"
                                        android:maxHeight="10dip"
                                        android:minHeight="10dip"
                                        android:progressDrawable="@drawable/download_progress_style" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10dp">

                    <com.app.elixir.TravelB2B.mtplview.MtplTextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Description"
                        android:textColor="@color/colorPrimary"
                        mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                    <com.app.elixir.TravelB2B.mtplview.MtplTextView
                        android:id="@+id/txtDiscription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text=""
                        mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10dp" android:orientation="vertical">

                    <com.app.elixir.TravelB2B.mtplview.MtplTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Certificates"
                        android:textColor="@color/colorPrimary"
                        mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"></android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dp"
                card_view:cardCornerRadius="4dp"
                android:id="@+id/cardReview"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/font_10dp">

                    <com.app.elixir.TravelB2B.mtplview.MtplTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reviews"
                        android:textColor="@color/colorPrimary"
                        mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"></android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
