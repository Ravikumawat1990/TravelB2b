                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Triple"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtTriple"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"

                                android:textSize="@dimen/font_12sp"

                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Child_With_Bed"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"

                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtChildWithbed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"

                                android:textSize="@dimen/font_12sp"

                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"

                                android:text="@string/Child_Without_Bed"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtChildWithoutbed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"


                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Check_In"
                                android:textColor="@color/colorPrimaryDark"

                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtCheckIn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"


                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Check_Out"
                                android:textColor="@color/colorPrimaryDark"

                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtCheckout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"

                                android:textSize="@dimen/font_12sp"

                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Destination_State"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"

                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtDestState"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"


                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Destination_City"

                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtDestCity"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"


                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Locality"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtLocality"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"

                                android:padding="@dimen/margin_5dp"

                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Hotel_Category"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"

                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtHotelCat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"

                                android:textSize="@dimen/font_12sp"

                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Meal"

                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtMeal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"

                                android:textColor="@android:color/black"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"

                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"

                                android:textColor="@android:color/black"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView

