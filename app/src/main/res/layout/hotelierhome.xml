<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackColor"
    android:gravity="center"
    android:orientation="vertical">

    <com.app.elixir.TravelB2B.mtplview.MtplTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_10dp"
        android:text="@string/promoteHotel"
        android:textColor="@color/appTextColor"
        android:textSize="18sp"
        mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.app.elixir.TravelB2B.mtplview.MtplTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_2dp"
            android:text="Do targeted marketing"
            android:textSize="16sp"
            mtplview:TypeFace="@string/fontface_roboto_light" />

        <com.app.elixir.TravelB2B.mtplview.MtplTextView
            android:id="@+id/mtplTextView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_2dp"
            android:text="Increase your business"
            android:textSize="16sp"
            mtplview:TypeFace="@string/fontface_roboto_light" />

        <com.app.elixir.TravelB2B.mtplview.MtplTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_2dp"
            android:text="Analyze your promotion's performance" />

        <com.app.elixir.TravelB2B.mtplview.MtplTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_2dp"
            android:text="Pay nominal price"
            android:textSize="16sp"
            mtplview:TypeFace="@string/fontface_roboto_light" />

    </LinearLayout>

    <com.app.elixir.TravelB2B.mtplview.MtplButton
        android:id="@+id/btntellmemore"
        android:layout_width="@dimen/margin_160dp"
        android:layout_height="@dimen/margin_40dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/blue_rect"
        android:text="Tell me more"

        android:textColor="@android:color/white" />

</LinearLayout>