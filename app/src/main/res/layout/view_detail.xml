<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_response_detail_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.app.elixir.TravelB2B.view.ViewMyResdetailView"
    android:baselineAligned="false">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--Req Type Title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <com.app.elixir.TravelB2B.mtplview.MtplTextView
                    android:id="@+id/reqtypetxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:text="PACKAGE DETAIL"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="16sp"
                    mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

            </LinearLayout>

            <!--General Req Tilte-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/appTextColor"
                android:orientation="vertical"
                android:padding="5dp">

                <com.app.elixir.TravelB2B.mtplview.MtplTextView
                    android:id="@+id/gen_req_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="General Requirements"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

            </LinearLayout>

            <!--General Req Card-->

            <android.support.v7.widget.CardView
                android:id="@+id/rootView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/margin_10dp"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/refId"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtRefId"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/totBudge"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txttotBudget"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"

                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/adult1"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtadult"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/child_b_6"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtchilds"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- Stay Req Title-->
            <LinearLayout
                android:id="@+id/stay_req_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/appTextColor"
                android:orientation="vertical"
                android:padding="5dp">

                <com.app.elixir.TravelB2B.mtplview.MtplTextView
                    android:id="@+id/stay_req_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Stay Requirements"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

            </LinearLayout>

            <!-- Stay Req Card-->
            <LinearLayout
                android:id="@+id/cardstayreq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/stay_recycleView"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <!-- Transport Req Title-->
            <LinearLayout
                android:id="@+id/trans_req_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appTextColor"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="8dp">

                <com.app.elixir.TravelB2B.mtplview.MtplTextView
                    android:id="@+id/trans_req_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Transport Requirements"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

            </LinearLayout>

            <!-- Transport Req Card-->
            <android.support.v7.widget.CardView
                android:id="@+id/cardtarnsreq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/transport"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txttransprot"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/stDate"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtsdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/edDate"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtedate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Pickup_Locality"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtplocalicy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Pickup_City"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtpcity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Pickup_State"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtpstate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Destination_Locality1"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtdLocality"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Destination_City1"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/txtDestCity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:text="@string/Destination_State1"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

                            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                                android:id="@+id/textdstate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:maxLines="1"
                                android:padding="@dimen/margin_5dp"
                                android:singleLine="true"
                                android:textSize="@dimen/font_12sp"
                                mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/trans_recycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

            <!-- Comment Req Title-->
            <LinearLayout
                android:id="@+id/comment_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/appTextColor"
                android:orientation="vertical"
                android:padding="5dp">

                <com.app.elixir.TravelB2B.mtplview.MtplTextView
                    android:id="@+id/comment_title_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Comment"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    mtplview:TypeFace="@string/fontface_DroidSerif_Bold" />

            </LinearLayout>
            <!-- Comment Txt Card-->
            <android.support.v7.widget.CardView
                android:id="@+id/cardcomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="5dp"
                android:layout_marginBottom="10dp">

                <com.app.elixir.TravelB2B.mtplview.MtplTextView
                    android:id="@+id/comment_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Comment here"
                    android:textSize="@dimen/font_12sp"
                    mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>