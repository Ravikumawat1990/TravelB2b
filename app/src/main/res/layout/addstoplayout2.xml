<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_5dp"
    android:orientation="vertical"
    android:padding="@dimen/margin_5dp">

    <com.app.elixir.TravelB2B.mtplview.MtplTextView
        android:id="@+id/txtStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop 1" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp">

        <com.app.elixir.TravelB2B.mtplview.MtplEditText
            android:id="@+id/edtStopLocality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stop Locality`"

            android:singleLine="true"
            android:textSize="12sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp">

        <AutoCompleteTextView
            android:id="@+id/edtStopCity2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stop City"
            android:maxLines="1"

            android:textSize="12sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp">

        <com.app.elixir.TravelB2B.mtplview.MtplEditText
            android:id="@+id/edtStopState2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:enabled="false"
            android:hint="Stop State"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="12sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

    </android.support.design.widget.TextInputLayout>

    <com.app.elixir.TravelB2B.mtplview.MtplEditText
        android:id="@+id/edtStopStateID3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="true"
        android:enabled="false"
        android:inputType="number"
        android:maxLines="1"
        android:textSize="12sp"
        android:visibility="gone"
        mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

    <com.app.elixir.TravelB2B.mtplview.MtplEditText
        android:id="@+id/edtStopCityID3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="true"
        android:enabled="false"
        android:inputType="number"
        android:maxLines="1"
        android:textSize="12sp"
        android:visibility="gone"
        mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />


    <com.app.elixir.TravelB2B.mtplview.MtplButton
        android:id="@+id/btnRemoveStop2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/blue_rect"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:text="REMOVE STOP"
        android:textColor="@android:color/white"
        mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />


</LinearLayout>