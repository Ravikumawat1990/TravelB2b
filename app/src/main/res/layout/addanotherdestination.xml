<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mtplview="http://schemas.android.com/tools"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.silencedut.expandablelayout.ExpandableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp"
        app:expDuration="300"
        app:expExpandScrollTogether="false"
        app:expWithParentScroll="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <com.app.elixir.TravelB2B.mtplview.MtplTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="@dimen/margin_15dp"
                android:text="No. of Rooms "
                android:textColor="@android:color/darker_gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="@dimen/margin_10dp"
                android:src="@drawable/ic_add_black_24dp"
                android:tint="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/border"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="@dimen/margin_10dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp">

                    <com.app.elixir.TravelB2B.mtplview.MtplEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Single"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="18sp"
                        mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp">

                    <com.app.elixir.TravelB2B.mtplview.MtplEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Double"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="18sp"
                        mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp">

                    <com.app.elixir.TravelB2B.mtplview.MtplEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Triple"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="18sp"
                        mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp">

                    <com.app.elixir.TravelB2B.mtplview.MtplEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Child with bed"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="18sp"
                        mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp">

                    <com.app.elixir.TravelB2B.mtplview.MtplEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Child without bed"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="18sp"
                        mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </com.silencedut.expandablelayout.ExpandableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:orientation="vertical">

        <com.app.elixir.TravelB2B.mtplview.MtplTextView
            android:id="@+id/mtplTextView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:text="Hotel Rating"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@drawable/spinner_border"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:background="@android:color/transparent"
                android:entries="@array/hotRating"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_5dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:orientation="vertical">

        <com.app.elixir.TravelB2B.mtplview.MtplTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:text="Hotel Category"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@drawable/spinner_border"
            android:orientation="horizontal">


            <com.app.elixir.TravelB2B.utils.MultiSelectionSpinner
                android:id="@+id/mySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_5dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:orientation="vertical">

        <com.app.elixir.TravelB2B.mtplview.MtplTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:text="Meal Plan"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@drawable/spinner_border"
            android:orientation="horizontal">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:entries="@array/hotRating"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_5dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />
        </RelativeLayout>
    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp">

        <com.app.elixir.TravelB2B.mtplview.MtplEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destination City"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="18sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp">

        <com.app.elixir.TravelB2B.mtplview.MtplEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destination State "
            android:inputType="text"
            android:singleLine="true"
            android:textSize="18sp"

            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp">

        <com.app.elixir.TravelB2B.mtplview.MtplEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destination Country "
            android:inputType="text"
            android:singleLine="true"
            android:textSize="18sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp">

        <com.app.elixir.TravelB2B.mtplview.MtplEditText
            android:id="@+id/locality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Locality"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="18sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp">

        <com.app.elixir.TravelB2B.mtplview.MtplEditText
            android:id="@+id/edtCheckIn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_date_range_black_24dp"
            android:drawableRight="@drawable/ic_date_range_black_24dp"
            android:hint="Check In"

            android:inputType="text"
            android:singleLine="true"
            android:textSize="18sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp">

        <com.app.elixir.TravelB2B.mtplview.MtplEditText
            android:id="@+id/edtCheckout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_date_range_black_24dp"
            android:drawableRight="@drawable/ic_date_range_black_24dp"
            android:hint="Check Out "
            android:inputType="text"

            android:singleLine="true"
            android:textSize="18sp"
            mtplview:TypeFace="@string/fontface_DroidSerif_Regular" />

    </android.support.design.widget.TextInputLayout>


    <com.app.elixir.TravelB2B.mtplview.MtplButton
        android:id="@+id/btnRemove"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_40dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/blue_rect"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:text="Remove"
        android:textColor="@android:color/white" />
</LinearLayout>