                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_2dp"
                                numberpicker:min="1"
                                numberpicker:unit="1"
                                numberpicker:value="-5" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </com.silencedut.expandablelayout.ExpandableLayout>

